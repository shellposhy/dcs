<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.dcs.dao.CrawlUnitMapper">
	<resultMap id="resultMap" type="cn.com.dcs.model.CrawlUnit">
		<result property="id" column="ID" />
		<result property="name" column="Name" />
		<result property="domain" column="Domain" />
		<result property="charset" column="Charset" />
		<result property="status" column="Status" />
		<result property="times" column="Times" />
		<result property="intervalTime" column="Interval_Time" />
		<result property="updateTime" column="Update_Time" />
		<result property="createTime" column="Create_Time" />
	</resultMap>
	
	<select id="findAll" resultMap="resultMap">
		SELECT * FROM crawl_unit
	</select>

	<select id="find" resultMap="resultMap">
		SELECT * FROM crawl_unit WHERE ID=#{id}
	</select>

	<insert id="insert">
		<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO crawl_unit(Name,Domain,Charset,Status,Times,Interval_Time,Update_Time,Create_Time)
		VALUES(#{name},#{domain},#{charset},#{status},#{times},#{intervalTime},#{updateTime},#{createTime})
	</insert>

	<update id="update">
		UPDATE crawl_unit SET
		Name = #{name},
		Domain =#{domain},
		Charset = #{charset},
		Status = #{status},
		Times = #{times},
		Interval_Time = #{intervalTime},
		Update_Time = #{updateTime}
		WHERE ID=#{id}
	</update>

	<delete id="delete">
		DELETE FROM crawl_unit WHERE ID=#{id}
	</delete>
</mapper>